{
  "editor.tabSize": 2,
  "editor.fontSize": 20,
  "window.zoomLevel": 0,
  "workbench.colorTheme": "Alt Catppuccin Mocha",
  "workbench.iconTheme": "vs-seti",
  "keyboard.layout": "fr",
  "dateTime.timeZone": "Europe/Paris",
  "github.copilot.advanced": {
    "enabled": true,
    "showInContextMenu": true,
    "showInStatusBar": true,
    "showInEditor": true,
    "showInEditorContextMenu": true,
    "showInEditorHover": true,
    "showInEditorTab": true,
    "showInEditorTitle": true,
    "showInEditorTitleMenu": true,
  },
  "liveServer.settings.CustomBrowser": "chrome",
  "liveServer.settings.port": 5501,
  "phpserver.browser": "chrome",
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8"
  },
  "markdownConverter.ConversionType": [
    "PDF"
  ],
  "markdownConverter.DestinationPattern": "${workspaceFolder}/${dirname}/out/${basename}.${extension}",
  "markdownConverter.Assets.StyleSheets": {
    "${workspaceFolder}/others/style-sheets/markdown.css": "Default",
    "https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css": "Include"
  },
  "markdownConverter.Assets.Scripts": {
    "https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js": "Default"
  },
  "markdownConverter.Parser.SystemParserEnabled": true,

  "notebook.output.scrolling": true
}
